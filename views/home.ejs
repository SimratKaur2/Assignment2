<%- include("templates/header") %>
    <div class="container">
        <br><br>
        <div class="row center" style="margin-top: 120px">
        <% if (!user) { %>
            <h1 class="header center">Welcome to Home Page!</h1>
            <div class="row center" style="margin-top: 50px">
                <ul>
                    <li style="margin-bottom: 20px;">
                        <a style="width: 150px" href="/signUp" class="btn-large waves-effect waves-light btn teal darken-1">Sign Up</a>
                    </li>
                    <li>
                        <a style="width: 150px" href="/login" class="btn-large waves-effect waves-light btn  teal darken-1">Login</a>
                    </li>
                </ul>
            </div>
            </div>
            <br><br>
            <% } else { %>
        <% const user=username; %>
            <div class="row">
                <div class="col s12">
                    <h1>Hello, <%= user %>!</h1>
                    <p>Welcome back to our website!</p>
                </div>
            </div>
            <div class="row center-align">
                <div class="col s12" style="margin-bottom: 10px;">
                    <form action="/members">
                        <button style="width: 200px" type="submit" class="waves-effect waves-light btn">Go to Members Area</button>
                    </form>
                </div>
                <div class="col s12" style="margin-bottom: 10px;">
                    <form action="/logout" method="post">
                        <button style="width: 200px" type="submit" class="waves-effect waves-light btn">Log Out</button>
                    </form>
                </div>
            </div>

                <% } %>
    </div>
    <%- include("templates/footer") %>